<div id="guesses">
  <% @word.guesses.where(user_id: current_user.id).order(:created_at).each do |guess| %>
    <div>
      <%= guess.prettify %>
    </div>
  <% end %>
  <% unless @word.guessed? %>
    <%= render 'guesses/form', word: @word %>
  <% end %>
  <%= link_to "Back", puzzles_path %>
</div>

